        "description": "GET /api/v1/dashboard/exec/metricas\nQuery params: id_empresa, id_filial, filtro, data_inicio, data_fim",
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{baseUrl}}:{{port}}/api/v1/dashboard/exec/metricas?id_empresa={{id_empresa}}&id_filial={{id_filial}}&filtro={{filtro}}",
          "host": ["{{baseUrl}}:{{port}}"],
          "path": ["api", "v1", "dashboard", "exec", "metricas"],
          "query": [
            { "key": "id_empresa", "value": "{{id_empresa}}" },
            { "key": "id_filial", "value": "{{id_filial}}" },
            { "key": "filtro", "value": "{{filtro}}" }
